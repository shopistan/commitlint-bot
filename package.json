		"@commitlint/core": "^17.7.1",
		"probot": "^12.3.1"
	},
	"devDependencies": {
		"jest": "^29.6.2",
		"smee-client": "^1.0.1"
	},
	"engines": {
		"node": "8.x",
		"npm": "5.5.x"
	},
	"jest": {
		"testEnvironment": "node"
	}
